<div class="additional_info">
    <div class="container">
        <div class="sap_tabs">
            <div id="horizontalTab1" style="display: block; width: 100%; margin: 0px;">
                <ul>
                    <li class="resp-tab-item" aria-controls="tab_product_information" role="tab"><span>Thông tin sản phẩm</span></li>
                    <li class="resp-tab-item" aria-controls="tab_Reviews" role="tab"><span>Bình luận</span></li>
                </ul>
                <div class="tab-1 resp-tab-content additional_info_grid" aria-labelledby="tab_product_information">
                    @if (Model.SupplierID == 1 || Model.SupplierID == 2)
                    {
                        <h3>@Model.ProductName</h3>
                        <p>
                            @Model.Description
                        </p><br />
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="col-md-3">Element Name</th>
                                    <th class="col-md-8">Detail content</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Hệ điều hành</td>
                                    <td>@Model.OperatingSystem</td>
                                </tr>
                                <tr>
                                    <td>Bộ xử lý - chipset</td>
                                    <td>
                                        Bộ xử lý: @Model.CpuChip <br />
                                        Chipset: @Model.CpuType <br />
                                        Tốc độ CPU: @Model.CpuSpeed <br />
                                        Tốc độ tối đa: @Model.CpuMaxSpeed <br />
                                        Tốc độ bus: @Model.BusSpeed
                                    </td>
                                </tr>
                                <tr>
                                    <td>Bộ nhớ</td>
                                    <td>
                                        @Model.Ram Ram @Model.RamType <br />
                                        Tốc độ bus ram: @Model.BusRamSpeed <br />
                                        Dung lượng ram rối đa có thể trang bị: @Model.MaxRam
                                    </td>
                                </tr>
                                <tr>
                                    <td>Màn hình</td>
                                    <td>
                                        kích thước: @Model.ScreenSize <br />
                                        Độ phân giải: @Model.Resolution <br />
                                        Công nghệ: @Model.ScreenTechnology <br />
                                        Màn hình cảm ứng: @Model.TouchScreen
                                    </td>
                                </tr>
                                <tr>
                                    <td>Đồ họa</td>
                                    <td>
                                        Card đồ họa: @Model.GraphicsCard
                                    </td>
                                </tr>
                                <tr>
                                    <td>Âm thanh</td>
                                    <td>
                                        @Model.Sound
                                    </td>
                                </tr>
                                <tr>
                                    <td>Lưu trữ</td>
                                    <td>
                                        @Model.HardDrive
                                    </td>
                                </tr>
                                <tr>
                                    <td>Khe cắm thẻ nhớ</td>
                                    <td>
                                        @Model.MemoryCardSlot
                                    </td>
                                </tr>
                                <tr>
                                    <td>Camera</td>
                                    <td>
                                        @Model.Webcam
                                    </td>
                                </tr>
                                <tr>
                                    <td>Kết nối</td>
                                    <td>
                                        Cổng kết nối: @Model.ConnectionPort <br />
                                        Kết nối không dây: @Model.WirelessConnection
                                    </td>
                                </tr>
                                <tr>
                                    <td>Ổ đĩa quang</td>
                                    <td>
                                        @Model.OpticalDiskDrive
                                    </td>
                                </tr>
                                <tr>
                                    <td>Pin</td>
                                    <td>
                                        @Model.Pin<br />
                                        Loại pin: @Model.PinType
                                    </td>
                                </tr>
                                <tr>
                                    <td>Màu sắc</td>
                                    <td>
                                        @Model.Color
                                    </td>
                                </tr>
                                <tr>
                                    <td>Kích thước</td>
                                    <td>
                                        @Model.Size
                                    </td>
                                </tr>
                                <tr>
                                    <td>Trọng lượng</td>
                                    <td>
                                        @Model.Weight
                                    </td>
                                </tr>
                                <tr>
                                    <td>Chất liệu vỏ</td>
                                    <td>
                                        @Model.Material
                                    </td>
                                </tr>
                                <tr>
                                    <td>Đèn bàn phím</td>
                                    <td>
                                        @Model.KeyboardLights
                                    </td>
                                </tr>
                                <tr>
                                    <td>Bảo hành</td>
                                    <td>
                                        Bảo hành @Model.Warranty tháng
                                    </td>
                                </tr>
                                <tr>
                                    <td>Thông tin khác</td>
                                    <td>
                                        @Model.OtherInfo
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <h3>@Model.ProductName</h3>
                        <p>
                            @Model.Description
                        </p><br />
                        <div class="container">
                            <div class="col-md-3">
                                <h3>Kích thước</h3>
                                <ul style="list-style-type:none">
                                    <li>Kích thước: @Model.Size</li>
                                    <li>Size màn hình: @Model.ScreenSize</li>
                                    <li>Trọng lượng: @Model.Weight</li>
                                </ul>
                            </div>
                            <div class="col-md-5">
                                <h3>Thông số kỹ thuật</h3>
                                <h3>Hệ thống</h3>
                                <ul style="list-style-type:none">
                                    <li>Hệ điều hành: @Model.OperatingSystem</li>
                                </ul>
                                <br />
                                <h3>Kết nối</h3>
                                <ul style="list-style-type:none">
                                    <li>Cổng kết nối: @Model.ConnectionPort</li>
                                    <li>Kết nối không dây: @Model.WirelessConnection</li>
                                </ul>
                            </div>
                            <div class="col-md-3">
                                <h3>Thông tin bảo hành</h3>
                                <ul style="list-style-type:none">
                                    <li>Bảo hành @Model.Size tháng</li>
                                </ul>
                                <br />
                                <h3>Thông tin khác</h3>
                                <ul style="list-style-type:none">
                                    <li>@Model.OtherInfo</li>
                                </ul>
                            </div>
                        </div>
                    }
                </div>

                <div class="tab-2 resp-tab-content additional_info_grid" aria-labelledby="tab_Reviews">
                    <p style="padding-bottom:10px; font-size:26px">Bình luận</p>
                    <div style="border-style:solid; border-width:1px; min-height:300px">
                        @if (listComment != null)
                        {
                            foreach (var item in listComment)
                            {
                                <div class="additional_info_sub_grids">
                                    <div class="col-xs-2 additional_info_sub_grid_left">
                                        <img src="/Data/images/avatar.jpg" alt=" " class="img-responsive" style="width:80px;height:80px;" />
                                    </div>
                                    <div class="col-xs-10 additional_info_sub_grid_right">
                                        <div class="additional_info_sub_grid_rightl">
                                            <a href="#">@item.Name</a>
                                            <h5>@item.CreateDate</h5>
                                            <p>
                                                @item.CommentContent.ToString();
                                            </p>
                                        </div>
                                        <div class="clearfix"> </div>
                                    </div>
                                    <div class="clearfix"> </div>
                                </div>
                            }
                        }

                    </div>

                    <div class="review_grids">
                        <h5>Nhập bình luận</h5>

                        @using (Html.BeginForm("ProductComment", "Product", FormMethod.Post))
                        {
                            var session = (TechDeviShopVs002.Common.CusUserLogin)Session[TechDeviShopVs002.Common.CommonConstants.CusUserSession];

                            if (session != null)
                            {
                                <div class="form-group">
                                    <textarea type="text" name="CommentContent" placeholder="Nhập nội dung bình luận"></textarea>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="Name" placeholder="Tên người bình luận" value="@session.CustomerName" />
                                    <input type="email" name="Email" placeholder="Email" value="@session.CustomerEmail" />
                                </div>
                                <div class="form-group">
                                    <input type="hidden" name="ProductID" value="@Model.ProductID" />
                                    <input value="Gửi" type="Submit" />
                                </div>
                            }
                            else
                            {
                                <div class="form-group">
                                    <textarea type="text" name="CommentContent" placeholder="Nhập nội dung bình luận"></textarea>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="Name" placeholder="Tên người bình luận" />
                                    <input type="email" name="Email" placeholder="Email" />
                                </div>
                                <div class="form-group">
                                    <input type="hidden" id="productID" name="productID" value="@Model.ProductID" />
                                    <input value="Gửi" type="Submit" />
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <script src="~/Assets/Client/js/easyResponsiveTabs.js" type="text/javascript"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('#horizontalTab1').easyResponsiveTabs({
                    type: 'default', //Types: default, vertical, accordion
                    width: 'auto', //auto or any width like 600px
                    fit: true   // 100% fit in a container
                });
            });
        </script>
    </div>
</div>
