
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Assets/Client/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
<link href="~/Assets/Client/css/bootstrap-social.css" rel="stylesheet" />
<link href="~/Assets/Client/css/style.css" rel="stylesheet" type="text/css" media="all" />
<link href="~/Assets/Client/css/fasthover.css" rel="stylesheet" type="text/css" media="all" />
<link href="~/Assets/Client/css/popuo-box.css" rel="stylesheet" type="text/css" media="all" />
<!-- //Custom Theme files -->
<!-- font-awesome icons -->
<link href="~/Assets/Client/css/font-awesome.css" rel="stylesheet">
<!-- //font-awesome icons -->
<!-- js -->
<script src="~/Assets/Client/js/jquery.min.js"></script>
<link rel="stylesheet" href="~/Assets/Client/css/jquery.countdown.css" />
<script type="text/javascript" src="~/Assets/Client/js/bootstrap-3.1.1.min.js"></script>

<style>
    /* Style the tab */
    .tab {
        float: left;
        border: 1px solid #ccc;
        background-color: #f1f1f1;
        width: 15%;
        min-height: 500px;
    }

    /* Style the tab content */
    .tabcontent {
        float: left;
        padding: 0px 12px;
        border: 1px solid #ccc;
        width: 85%;
        border-left: none;
        min-height: 500px;
    }
</style>



<div class="single" style="padding-top:0">
    <div class="container">
        <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
            <ul id="myTab" class="nav nav-tabs tab" role="tablist" style="width:15%; float:left">
                <li role="presentation" class="active"><a href="#myProfile" role="tab" id="myProfile-tab" data-toggle="tab" aria-controls="myProfile">Hồ sơ cá nhân</a></li>
                <li role="presentation"><a href="#changePass" role="tab" id="changePass-tab" data-toggle="tab" aria-controls="changePass">Đổi mật khẩu</a></li>
                <li role="presentation"><a href="#myOrder" role="tab" id="myOrder-tab" data-toggle="tab" aria-controls="myOrder">Đơn hàng</a></li>
            </ul>
            <div id="myTabContent" class="tab-content tabcontent" style="width:85%; float:left">
                <div role="tabpanel" class="tab-pane fade active in" id="myProfile" aria-labelledby="myProfile-tab">
                    <p>profile</p>
                    <div class="clearfix"> </div>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="changePass" aria-labelledby="changePass-tab">
                    <div class="tab-container">
                        <div class="section group">
                            <div class="col-md-6">
                                @using (Html.BeginForm("Edit", "Profile", FormMethod.Post))
                                {
                                    var session = (TechDeviShopVs002.Common.CusUserLogin)Session[TechDeviShopVs002.Common.CommonConstants.CusUserSession];

                                    <div class="form-group">
                                        <label>Người nhận</label>
                                        <input name="shipName" class="form-control" value="@session.CustomerName" />
                                    </div>
                                    <div class="form-group">
                                        <label>Điện thoại</label>
                                        <input name="mobile" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label>Địa chỉ</label>
                                        <input name="address" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input name="email" class="form-control" value="@session.CustomerEmail" />
                                    </div>

                                    if (session == null)
                                    {
                                        <button type="submit" class="btn" disabled> Gửi đơn hàng </button>
                                        <a class="alert-danger">Bạn cần đăng nhập tài khoản trước</a>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn">Gửi đơn hàng</button>
                                    }
                                }
                            </div>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="myOrder" aria-labelledby="myOrder-tab">
                    <p>order</p>
                    <div class="clearfix"> </div>
                </div>
            </div>
        </div>
    </div>
</div>
