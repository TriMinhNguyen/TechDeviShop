            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.CustomerID }) |
                @Html.ActionLink("Xem chi tiết", "Details", new { id = item.CustomerID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.CustomerID })
            </td>
        </tr>
    }

</table>
<br />
